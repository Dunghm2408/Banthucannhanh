@model IEnumerable<Ps12922_HoManhDung_ASM.Models.Donhang>

@{
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<h1>Lịch sử mua hàng</h1>

@*<p>
    <a asp-action="Create">Tiếp tục mua hàng</a>
</p>*@
<table class="table table-bordered table-hover table-warning table-striped">
    <thead class="text-center badge-danger">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngaydat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tongtien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangthaiDonhang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ghichu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khachhang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaydat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tongtien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangthaiDonhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ghichu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Khachhang.Address)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.DonhangID">Edit</a> |*@
                    <a class="text-decoration-none adesi " asp-action="Details" asp-route-id="@item.DonhangID">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @*<a asp-action="Edit" asp-route-id="@item.DonhangID">Edit</a> |*@
    <a class="text-decoration-none adesi " asp-action="Index">Trở về</a>
</div>
