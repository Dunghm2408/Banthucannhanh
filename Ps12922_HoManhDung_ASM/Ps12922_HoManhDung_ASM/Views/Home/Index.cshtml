@model IEnumerable<Ps12922_HoManhDung_ASM.Models.MonAn>;
@{
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}
<style>
    body {
        background-color: #81ecec;
    }
    .list-product {
      
        margin: auto;
        display: flex;
        flex-wrap: wrap;
    }

    .product {
        padding-left: 2px;
        margin-top: 10px;
        margin-right: 10px;
        width: 205px;
    }
        .product:hover {
            background-color: #00b894;
            transform: scale(1.025,1.025);
        }

    .img {
        width: 150px;
        display: block;
        margin: auto;
    }

    .title {
        color: #0e0e0e;
        display: block;
        font-size: 15px;
        font-weight: bold;
        text-align: center;
        height: 60px;
    }

    .field-price {
       
        font-size: 24px;
        color: #d50000;
        margin-bottom: 15px;
        font-weight: 700;
        text-align: center;
    }

    .viewProduct, .addProduct {
      
        border: 0;
        font-weight: 700;
        padding: 9px 5px;
        background: #e65c5c;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        display: block;
        width: 186px;
        margin: 0 auto;
        color: lightgoldenrodyellow;
    }

    .addProduct {
        margin-left: 2px;
    }
    .addProduct:hover{
        text-decoration: none;
        color: black;
    }
</style>

<div class="container">
    <center>
        <h1 class="font-weight-bold">Chào mừng đến với<br />𝓥𝓲𝓮𝓽 𝓝𝓪𝓶 𝓕𝓸𝓸𝓭 ✿ 𝓓𝓻𝓲𝓷𝓴</h1>
    </center>
</div>
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/Monngon/phobo1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Monngon/comrang1.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Monngon/hieutieunamvang1.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="list-product mt-4 ml-3">
    @foreach (var item in Model)
    {
        <div class="product">
            <img src="~/images/monan/@item.Hinh" class="img-responsive" />
            <span class="title">@item.Name</span>
            <div class="field-price mt-n4">@item.Gia</div>
            <a class="addProduct text-center ml-2" href="javascript:addCart(@item.MonAnID);">
                Add order <img id="imgBusy_@item.MonAnID" src="~/images/busy.gif" style="display:none" />
            </a>
        </div>
    }
</div>
<script>
    function addCart(id) {
        $("#imgCart").attr("src", '/images/cartA.png')
        $("#imgBusy_" + id).show();
        setTimeout(function () {
            $.ajax({
                url: "/Home/AddCart?Id=" + id,
                type: "Post",
                success: function (result) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thêm vào giỏ thành thành công!',
                        showConfirmButton: false,
                        timer: 1500
                    })
                },
                error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Thêm vào giỏ thành thất bại!',
                        showConfirmButton: true,
                        timer: 1500
                    })
                }
            });
            $("#imgBusy_" + id).hide();
        }, 500);
    }
</script>
