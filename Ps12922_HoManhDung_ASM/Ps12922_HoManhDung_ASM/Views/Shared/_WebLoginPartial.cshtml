@using Ps12922_HoManhDung_ASM.Models
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Extensions
@using Ps12922_HoManhDung_ASM.Constant

@{ string Email = Context.Session.GetString(SessionKey.Khachhang.KH_Email);}
@{string fullName = Context.Session.GetString(SessionKey.Khachhang.KH_FullName);}
@{ string cart = Context.Session.GetString("cart");}

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link font-weight-bold" id="naitem" id="cart" href="/Home/Cart">Giỏ hàng
            @if (cart != null && cart != "")
            {
                <img id="imgCart" src="~/images/cartA.png" style="width:30px" />
            }
            else
            {
                <img id="imgCart" src="~/images/cart.png" style="width:30px" />
            }
        </a>
    </li>
    @if (Email != null && Email != "")
    {
        <li class="nav-item">
            <a class="nav-link font-weight-bold" id="information" href="/Home/Info"><i class="fas fa-user" style="color:#eb34bd;"></i>         Xin Chào @fullName! |</a>
        </li>
        <li class="nav-item">
            <a class="nav-link font-weight-bold" id="naitem" id="history" href="/Home/History"><i class="fas fa-sort" style="color:#eb34bd;"></i>    Đơn hàng </a>
        </li>
        <li class="nav-item">
            <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                <button type="submit" id="naitem" class="nav-link btn btn-link font-weight-bold"><i class="fas fa-sign-out-alt" style="color:#eb34bd;"></i>  Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link font-weight-bold" id="naitem" id="register" href="/Home/Register"><i class="fas fa-pen-fancy" style="color:#eb34bd;"></i>    Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link font-weight-bold" id="naitem" id="login" href="/Home/Login"><i class="fas fa-sign-in-alt" style="color:#eb34bd;"></i>     Đăng nhập</a>

        </li>
    }
</ul>
